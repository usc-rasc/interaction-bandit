	<!--********Shoulder Joint******* -->

	<!--Variables-->
	<property name="shoulder_radius" value="0.0181"/>
	
	<joint name="shoulderRight_joint" type="continuous">
		<parent link="body_link"/>
		<origin xyz="${body_width/2} 0 ${body_height}" rpy="0 0 0"/>
		<child link="shoulderRight_link"/>			
	</joint>
	
	<link name="shoulderRight_link">
		<inertial>
			<mass value="2"/>
			<origin xyz="0 0 0"/>
			<inertia ixx="1" ixy="0" ixz="0"
							 iyy="1" iyz="0"
							 izz="1"/>
		</inertial>
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<sphere radius="${shoulder_radius}"/>
			</geometry>
		</visual>
		<collision>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<sphere radius="${shoulder_radius}"/>
			</geometry>
		</collision> 
	</link>
	<gazebo reference="shoulderRight_link">
	    <mu1>50.0</mu1>
	    <mu2>50.0</mu2>
	    <kp>1000000.0</kp>
	    <kd>1.0</kd>
	</gazebo>

	<!--********Arm Joint******* -->

	<!--Variables-->
	<property name="arm_length" value="0.2286"/>
	<property name="arm_radius" value="0.381"/>
