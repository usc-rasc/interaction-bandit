		<origin xyz="0.045 0 0" rpy="0 0 0" />
		<axis xyz="0 0 1" />	
		<limit upper="1.57" lower="-1.57" effort="100" velocity="100" />
	</joint>
	
	<joint name="r_elbow_rotation" type="revolute">
