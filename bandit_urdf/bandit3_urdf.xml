<robot name="bandit_3.0">
	<link name="head" />
	<link name="neck" />
	<link name="torso" />
	
	<link name="r_shoulder" />
	<link name="r_upperarm" />
	<link name="r_elbow" />
	<link name="r_forearm" />
	<link name="r_wrist" />
	<link name="r_hand" />
	<link name="r_thumb" />
	
	<link name="l_shoulder" />
	<link name="l_upperarm" />
	<link name="l_elbow" />
	<link name="l_forearm" />
	<link name="l_wrist" />
	<link name="l_hand" />
	<link name="l_thumb" />
	
	<!--connects torso to world through fixed link-->
	<joint name="torso_fixed" type="fixed">
		<parent link="world" />
		<child link="torso" />
		<origin xyz="0 0 0" rpy="0 0 0" />
	</joint>
	
	<joint name="head_rotation" type="revolute">
		<parent link="torso" />
		<child link="neck" />
		<origin xyz="0 0.28 0" rpy="0 0 0" />
		<axis xyz="0 1 0" />
		<limit upper="1.57" lower="-1.57" effort="100" velocity="100"/>
	</joint>

	<joint name="head_nod" type="revolute">
		<parent link="neck" />
		<child link="head" />
		<origin xyz="0 0.065 0" rpy="0 0 0" />	
		<axis xyz="1 0 0" />	
		<limit upper="1.57" lower="-1.57" effort="100" velocity="100" />
	</joint>
		
	<!--right joints-->
	<joint name="r_shoulder_rotation" type="revolute"> 
		<parent link="torso" />
		<child link="r_shoulder" />
		<origin xyz="0.115 0.23 0" rpy="0 0 0" />
		<axis xyz="1 0 0" />	
		<limit upper="1.57" lower="-1.57" effort="100" velocity="100" />
	</joint>
	
	<joint name="r_shoulder_raiselower" type="revolute"> 
		<parent link="r_shoulder" />
